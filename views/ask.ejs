<%- include ("partials/header.ejs") %>
<body>
  <%- include ("partials/navbar.ejs") %>
  <div class="container">
    <div class="card form-ask">
      <div class="card-header"><h3>Realizar pergunta</h3></div>
      <div class="card-body">
        <form action="/saveask" method="POST">
          <label for="">Título</label>
          <input
            name="title"
            type="text"
            placeholder="Título"
            class="form-control"
          />
          <br />
          <label for="">Descrição</label>
          <textarea
            name="description"
            placeholder="Descreva sua pergunta aqui!"
            class="form-control"
          ></textarea>
          <br />
          <button class="btn btn-primary">Perguntar</button>
        </form>
      </div>
    </div>
  </div>
</body>
